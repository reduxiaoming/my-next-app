{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react",
    "experimentalDecorators": true, // 启用实验装饰器支持
    "emitDecoratorMetadata": true  // 启用元数据装饰器支持
  },
  "include": ["backend/**/*", "frontend/**/*"],
  "exclude": ["node_modules", "dist"]
}